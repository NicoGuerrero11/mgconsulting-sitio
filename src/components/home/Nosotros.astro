---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
const { title, href, label } = Astro.props;
---

<section
  class="relative mx-[calc(50%-50vw)] w-screen min-h-[400px] md:min-h-[600px] bg-[var(--color-blue)] flex items-center overflow-hidden overscroll-x-contain pt-10 md:pt-14 lg:pt-16 pb-0 mb-0"
>
  <Container class="w-full px-6 md:px-8">
    <h2
      id="nosotros-title"
      class="text-center text-white font-semibold tracking-tight text-2xl md:text-4xl mb-20"
    >
      {title}
    </h2>
    <div
      class="mt-6 flex flex-col md:flex-row gap-3 md:gap-4 w-full md:w-auto justify-center items-center text-center"
    >
      <Button
        href={href}
        label={label}
        variant="primary"
        class="w-full md:w-auto"
      />
    </div>
  </Container>
</section>
