---
import Button from "../ui/Button.astro";
const {
  title = "Service Title",
  description = "This is a description of the service.",
  href = "#",
  iconSrc = "/default-icon.svg",
  iconAlt = "Service Icon",
} = Astro.props;
---

<div
  class="w-full max-w-[320px] md:max-w-[576px]
+ min-h-[264px] md:min-h-[372px]
+ rounded-[10px]
+ shadow-[0px_0px_1px_#171a1fD,0px_0px_2px_#171a1f14]
+ p-6 bg-white flex flex-col items-center text-center mx-auto"
>
  <img
    src={iconSrc}
    alt={iconAlt}
    class="w-[32px] h-[32px] md:w-[48px] md:h-[48px] mb-4"
  />
  <h3 class="text-xl text-[var(--color-text)] md:text-2xl font-semibold mb-2">
    {title}
  </h3>
  <p class="text-[var(--color-muted)] text-sm md:text-base mb-4">
    {description}
  </p>
  <div class="inline-block px-4 py-2 rounded">
    <Button href="/servicios" label="Saber mas" variant="secondary" />
  </div>
</div>
