---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
import { Picture } from "astro:assets";
import heroimg from "../../assets/img/hero/hero-prueba.png";
---

<!-- HERO -->
<section
  class="relative mx-[calc(50%-50vw)] w-screen
        min-h-[800px] md:min-h-[900px]
        bg-[var(--color-hero-bg)] -mt-12 flex items-center"
>
  <Container class="py-10 md:py-12 lg:py-0 w-full">
    <div
      class="grid md:grid-cols-2 items-center
            gap-8 md:gap-10 lg:gap-12"
    >
      <!-- COLUMNA IMAGEN (arriba en mobile, derecha en desktop) -->
      <div class="order-1 md:order-2 flex justify-center md:justify-end">
        <div
          class="overflow-hidden shadow-lg
                rounded-md md:rounded-lg
                w-[310px] h-[192px]
                md:w-[460px] md:h-[300px]
                lg:w-[544px] lg:h-[389px]"
        >
          <Picture
            src={heroimg}
            alt="Consultoría estratégica: dashboard y análisis de datos para el crecimiento empresarial"
            widths={[310, 460, 544, 800, 1200]}
            sizes="(max-width: 768px) 310px, (max-width: 1024px) 460px, 544px"
            class="w-full h-full object-cover"
            loading="eager"
            fetchpriority="high"
            format={["avif", "webp"]}
          />
        </div>
      </div>

      <!-- COLUMNA TEXTO -->
      <div class="order-2 md:order-1 text-center md:text-left">
        <h1
          id="hero-title"
          class="font-extrabold text-blue
                   text-[clamp(28px,6vw,40px)]
                   md:text-[44px] md:leading-[54px]
                   lg:text-[56px] lg:leading-[60px]"
        >
          Donde las personas crecen y tu empresa se transforma
        </h1>

        <!-- Botones: stacked en mobile, fila en md+; full width en mobile -->
        <div
          class="mt-6 flex flex-col md:flex-row gap-3 md:gap-4 w-full md:w-auto"
        >
          <Button
            href="/contacto"
            label="Agendar consulta"
            variant="primary"
            class="w-full md:w-auto"
          />
          <Button
            href="/servicios"
            label="Ver servicios"
            variant="secondary"
            class="w-full md:w-auto"
          />
        </div>
      </div>
    </div>
  </Container>
</section>
