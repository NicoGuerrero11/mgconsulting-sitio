---
import Container from "../ui/Container.astro";
import CardService from "../ui/CardService.astro";
import maleta from "../../assets/icons/maleta.svg";
import luz from "../../assets/icons/luz.svg";
---

<!-- SERVICES -->
<section
  class="relative mx-[calc(50%-50vw)] w-screen min-h-[700px] md:min-h-[800px] bg-[var(--bg-white)] flex items-center overflow-hidden overscroll-x-contain pt-10 md:pt-14 lg:pt-16 pb-0 mb-4"
>
  <Container class="w-full px-6 md:px-8">
    <h1
      id="services-title"
      class="text-center text-text font-semibold tracking-tight text-[20px] md:text-2xl lg:text-[28px] mb-20"
    >
      Nuestros Programas
    </h1>

    <div
      class="mx-auto max-w-[1280px] px-6
              grid grid-cols-1 md:grid-cols-2
              gap-8 lg:gap-16"
    >
      <CardService
        title="Executive Leadership"
        description="Desarrollamos planes  personalizados que impulsan el crecimiento, la eficiencia y la competitividad en mercados dinámicos."
        iconSrc={maleta.src}
      />
      <CardService
        title="Business Growth"
        description="Analizamos y rediseñamos sus operaciones para maximizar la productividad, reducir costos y mejorar la calidad de sus servicios."
        iconSrc={luz.src}
      />
    </div>
  </Container>
</section>
