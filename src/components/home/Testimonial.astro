---
import Container from "../ui/Container.astro";
import TestimonialCard from "../ui/Testimonial.astro";
import flecha from "../../assets/icons/flecha.svg";

const testimonials = [
  {
    quote:
      "Consultoría Estratégica transformó nuestra visión en resultados tangibles. Su asesoramiento fue clave para nuestro crecimiento exponencial.",
    author: "María Fernández",
    role: "CEO, InnovaTech Solutions",
  },
  {
    quote:
      "La atención personalizada y el profundo conocimiento del mercado que ofrecen son incomparables. Nos ayudaron a redefinir nuestra estrategia y superar los desafíos.",
    author: "Juan Pérez",
    role: "Director General, Grupo Horizonte",
  },
  {
    quote:
      "Gracias a su acompañamiento logramos ordenar procesos internos y mejorar la rentabilidad de la empresa. Un socio invaluable para cualquier empresa que busca avanzar.",
    author: "Lucía Ramírez",
    role: "Fundadora, CreceYA",
  },
];
---

<section
  class="relative mx-[calc(50%-50vw)] w-screen min-h-[700px] md:min-h-[800px] bg-[var(--bg-grey)] flex items-center overflow-hidden overscroll-x-contain pt-10 md:pt-14 lg:pt-16 pb-0 mb-0"
>
  <!-- Contenido centrado -->
  <Container class="w-full px-6 md:px-8">
    <h1
      id="testimonials-title"
      class="text-center text-text font-semibold tracking-tight text-[20px] md:text-2xl lg:text-[28px] mb-20"
    >
      Lo que dicen nuestros clientes
    </h1>

    <!-- MOBILE: carrusel (1 tarjeta a la vez con flechas) -->
    <div class="xl:hidden mt-8 relative">
      <div
        class="overflow-hidden mx-auto max-w-[360px] sm:max-w-[420px] md:max-w-[700px] lg:max-w-[860px] md:px-2"
      >
        <ul
          id="t-carousel"
          class="flex gap-4 w-full px-6 md:px-0 overflow-x-auto snap-x snap-mandatory scroll-smooth no-scrollbar"
        >
          {
            testimonials.map((t) => (
              <li class="snap-center shrink-0 basis-full md:basis-1/2">
                <TestimonialCard {...t} />
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Controles -->
      <button
        aria-label="Anterior"
        class="absolute left-3 top-1/2 -translate-y-1/2 grid place-items-center w-9 h-9 rounded-full bg-white/90 shadow-md ring-1 ring-slate-200 active:scale-95"
        onclick="window.__goTestimonial(-1)"
      >
        <img
          src={flecha.src}
          alt=""
          width="18"
          height="18"
          class="rotate-180 opacity-70"
        />
      </button>

      <button
        aria-label="Siguiente"
        class="absolute right-3 top-1/2 -translate-y-1/2 grid place-items-center w-9 h-9 rounded-full bg-white/90 shadow-md ring-1 ring-slate-200 active:scale-95"
        onclick="window.__goTestimonial(1)"
      >
        <img
          src={flecha.src}
          alt=""
          width="18"
          height="18"
          class="opacity-70"
        />
      </button>
    </div>

    <!-- DESKTOP: grilla -->
    <div
      class="hidden xl:grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mt-8"
    >
      {testimonials.map((t) => <TestimonialCard {...t} />)}
    </div>
  </Container>
  <script>
    import initTestimonialCarousel from "../../scripts/testimonial-carousel";
    initTestimonialCarousel();
  </script>

  <style>
    /* keep horizontal scroll contained to the carousel on touch devices */
    #t-carousel {
      overscroll-behavior-inline: contain;
    }
  </style>
</section>
