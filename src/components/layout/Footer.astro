---
import Container from "../ui/Container.astro";
import { Picture } from "astro:assets";
import logoMobile from "../../assets/img/logo/logo-mobile.png";
import logoDesktop from "../../assets/img/logo/logo-desktop.png";
const year = new Date().getFullYear();
---

<footer class="bg-[var(--color-panel)]">
  <Container>
    <!-- logo + menú -->
    <div
      class="flex items-center justify-between gap-5 md:gap-6 py-3 md:py-4 xl:py-3 min-h-[220px] md:min-h-[98px] flex-wrap"
    >
      <!-- Logo -->
      <a href="/" class="block order-1 mx-auto md:mx-0">
        <!-- Mobile -->
        <Picture
          src={logoDesktop}
          alt="MG Consulting - Volver al inicio"
          class="md:hidden h-[120px] w-auto mx-auto"
          width={480}
          height={120}
          loading="lazy"
          format={["avif", "webp", "png"]}
          quality={90}
        />
        <!-- Desktop -->
        <Picture
          src={logoDesktop}
          alt="MG Consulting - Consultoría Estratégica - Volver al inicio"
          class="hidden md:block h-[100px] w-auto"
          width={400}
          height={100}
          loading="lazy"
          format={["avif", "webp", "png"]}
          quality={90}
        />
      </a>

      <!-- Menú desktop -->
      <nav class="order-3 md:order-2 w-full md:w-auto">
        <ul
          class="footer-nav hidden md:flex justify-end gap-1 lg:gap-2 text-[14px] leading-[22px] font-normal text-text"
        >
          <li>
            <a href="/" class="px-3 font-semibold md:font-normal">Inicio</a>
          </li>
          <li><a href="/blog" class="px-3">Blog</a></li>
          <li><a href="/servicios" class="px-3">Servicios</a></li>
          <li><a href="/nosotros" class="px-3">Nosotros</a></li>
        </ul>

        <!-- Menú mobile (centrado bajo el logo) -->
        <ul
          class="footer-nav md:hidden flex flex-col items-center -mt-2 space-y-2 text-text text-[14px] leading-5"
        >
          <li><a href="/">Inicio</a></li>
          <li><a href="/servicios">Servicios</a></li>
          <li><a href="/nosotros">Nosotros</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/contacto">Contacto</a></li>
        </ul>
      </nav>
    </div>

    <!-- Separador -->
    <hr class="border-t border-[#E5E7EB]" />

    <!-- Fila inferior: copyright (puede envolver) -->
    <div
      class="flex items-center justify-center md:justify-between gap-3 py-2 flex-wrap"
    >
      <p
        class="text-center md:text-left text-[11px] leading-[17px] md:text-[14px] md:leading-[20px] font-normal text-text"
      >
        © {year} Managing &amp; Growth. Todos los derechos reservados.
      </p>
      <!-- espacio para redes  -->
      <div class="hidden"></div>
    </div>
  </Container>
</footer>
