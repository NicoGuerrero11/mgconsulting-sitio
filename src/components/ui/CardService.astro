---
import Button from "./Button.astro";
const { title = "Service Title", description = "This is a description of the service.", href = "#", iconSrc = "/default-icon.svg", iconAlt = "Service Icon" } = Astro.props;
---
<div class="max-w-sm rounded overflow-hidden shadow-lg p-6 bg-white flex flex-col items-center text-center">
    <img src={iconSrc} alt={iconAlt} class="w-16 h-16 mb-4" />
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="inline-block px-4 py-2 rounded">
        <Button href="/contacto" label="Contacto" />
    </div>
</div>
