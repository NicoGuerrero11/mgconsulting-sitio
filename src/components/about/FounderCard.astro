---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
/** Props */
interface Props {
  name: string;
  role?: string;
  photo: ImageMetadata; // importado desde assets
  bio: string;
  class?: string;
}
const {
  name,
  role = "Fundador y CEO",
  photo,
  bio,
  class: cls = "",
} = Astro.props;
---

<article
  class={`w-full max-w-6xl mx-auto p-6 sm:p-8 bg-white rounded-2xl shadow-sm md:bg-transparent md:shadow-none md:rounded-none ${cls}`}
>
  <div
    class="flex flex-col md:grid md:grid-cols-2 md:gap-12 items-center text-center md:text-left"
  >
    <div class="flex justify-center md:justify-center w-full md:w-auto">
      <Image
        src={photo}
        alt={`Foto de ${name}`}
        widths={[160, 224, 288, 384, 512]}
        sizes="(min-width: 768px) 288px, 160px"
        class="h-40 w-40 sm:h-44 sm:w-44 md:h-[288px] md:w-[288px] rounded-full object-cover object-top ring-4 ring-white shadow"
        loading="lazy"
        decoding="async"
      />
    </div>
    <div class="mt-4 md:mt-0 flex-1">
      <h3 class="text-xl md:text-2xl font-semibold text-text">{name}</h3>
      <p class="text-sm md:text-base text-muted">{role}</p>
      <p
        class="mt-4 text-base md:text-base md:leading-7 leading-6 text-gray-700"
      >
        {bio}
      </p>
    </div>
  </div>
</article>
