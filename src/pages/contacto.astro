---
import Layout from "../layouts/BaseLayout.astro";
import ContactIntro from "../components/contact/ContactIntro.astro";
import ContactForm from "../components/contact/ContactForm.astro";
import ContactDetails from "../components/contact/ContactDetails.astro";
---

<Layout 
  title="Contacto - Agenda tu Consultoría Gratuita | MG Consulting"
  description="Contacta con nuestros expertos en consultoría empresarial. Agenda una consulta gratuita para transformar tu negocio. Teléfono: +52 55 3996 5275 | marcelo@mgconsultings.com"
  mobileTitle="Contacto"
  image="/og-contacto.jpg"
>
  <ContactIntro />
  <section class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 md:mb-20">
    <article class="bg-white rounded-2xl shadow p-6">
      <h2 class="text-lg font-semibold mb-4">Envíanos un mensaje</h2>
      <ContactForm />
    </article>

    <aside class="bg-white rounded-2xl shadow p-4">
      <h2 class="text-lg font-semibold mb-4">Información de contacto</h2>
      <ContactDetails />
    </aside>
  </section>
</Layout>
